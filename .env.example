# Server Configuration
SERVER_PORT=8080
SERVER_BODY_LIMIT=10485760
SERVER_TIMEOUT=30
SERVER_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bookstore

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# Environment
ENVIRONMENT=development

# User Secrets (JWT Keys) - must be at least 32 chars
JWT_USERS_SECRET=replace-this-with-32-char-minimum-secret-key!!!
JWT_USERS_REFRESH_SECRET=replace-this-with-32-char-minimum-refresh-key!!!
